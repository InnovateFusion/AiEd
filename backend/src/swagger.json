  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Auth": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "User": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "verify": {
            "type": "boolean"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date"
          },
          "school": {
            "type": "string"
          },
          "grade": {
            "type": "string"
          },
          "image": {
            "type": "string"
          },
          "cover": {
            "type": "string"
          }
        },
        "required": ["email", "role"]
      },
      "Problem": {
        "type": "object",
        "properties": {
          "published": { "type": "boolean" },
          "source": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "value": { "type": "string" },
              "year": { "type": "number" }
            },
            "required": ["name", "value"]
          },
          "details": {
            "type": "object",
            "properties": {
              "target": { "type": "string" },
              "grade": { "type": "number" },
              "unit": { "type": "number" },
              "courses": { "type": "string" },
              "topic": { "type": "string" },
              "difficulty": { "type": "string" }
            },
            "required": ["target", "courses", "topic", "difficulty"]
          },
          "content": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "text": { "type": "string" },
              "image": { "type": "string" },
              "equation": { "type": "string" },
              "video": { "type": "string" }
            },
            "required": []
          },
          "answer": {
            "type": "object",
            "properties": {
              "type": { "type": "string" },
              "options": {
                "type": "object",
                "properties": {
                  "correct": { "type": "string" },
                  "choice": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "text": { "type": "string" },
                        "image": { "type": "string" },
                        "equation": { "type": "string" },
                        "video": { "type": "string" }
                      }
                    }
                  }
                }
              },
              "short": {
                "type": "object",
                "properties": {
                  "correct": { "type": "string" }
                }
              },
              "trueFalse": {
                "type": "object",
                "properties": {
                  "correct": { "type": "string" }
                }
              }
            },
            "anyOf": [
              { "required": ["options"] },
              { "required": ["short"] },
              { "required": ["trueFalse"] }
            ]
          }
        },
        "required": ["published", "source", "details", "content", "answer"]
      }
    }
  },
